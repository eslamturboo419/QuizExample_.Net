@model QuizTest.Models.Question

@{
    ViewBag.Title = "QuestionsThisCategory";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}


<h1>@ViewBag.sts </h1>

<p>
    this are   "  @ViewBag.numberthis  "  Questions  untill You Finish The All Questions
</p>


<h4> </h4>

<h2> QuizStart </h2>

<p>
    @ViewBag.numberthis / @ViewBag.total

</p>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Answer_Correct)

    <div class="row">
        <div class="container">
            <div class="row">
                <h1>@Html.DisplayFor(x => x.Qu_Name)</h1>
            </div>
            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.Answer_1, new { @class = "form-control" }) @Model.Answer_1 </h3>
            </div>
            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.Answer_2, new { @class = "form-control" }) @Model.Answer_2 </h3>
            </div>
            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.Answer_3, new { @class = "form-control" }) @Model.Answer_3 </h3>
            </div>
            <div class="row">
                <h3>@Html.RadioButtonFor(x => x.Answer_4, new { @class = "form-control" }) @Model.Answer_4 </h3>
            </div>
            <div class="rown">
                <input type="submit" value="submit" class="btn btn-success" />
            </div>

        </div>


    </div>

}

